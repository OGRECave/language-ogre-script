{
    "scopeName": "source.ogre.script",
    "patterns": [
        {
            "begin": "\\b(import)\\b",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control.import"
                }
            },
            "comment": "Import statement",
            "patterns": [
                {
                    "match": "\\b(from)\\b",
                    "name": "constant.language"
                }
            ],
            "end": "($|//)"
        },
        {
            "match": "\\b(abstract)\\b",
            "name": "entity.name.tag"
        },
        {
            "match": "\\b(set)\\b",
            "name": "entity.name.function"
        },
        {
            "begin": "\\b(texture_ref)\\b",
